<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest Version="7.0" ExtensionBundleId="com.quicklayers.pro" ExtensionBundleVersion="1.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <ExtensionList>
    <Extension Id="com.quicklayers.pro" Version="1.0" />
  </ExtensionList>
  <ExecutionEnvironment>
    <HostList>
      <!-- AE 2023 版本号是 23.0，这里设置支持 15.0 以上所有版本 -->
      <Host Name="AEFT" Version="[15.0,99.9]" />
    </HostList>
    <LocaleList>
      <Locale Code="All" />
    </LocaleList>
    <RequiredRuntimeList>
      <!-- AE 2023 使用 CSXS 11.0，这里必须匹配 -->
      <RequiredRuntime Name="CSXS" Version="11.0" />
    </RequiredRuntimeList>
  </ExecutionEnvironment>
  <DispatchInfoList>
    <Extension Id="com.quicklayers.pro">
      <DispatchInfo>
        <Resources>
          <MainPath>./client/index.html</MainPath>
          <ScriptPath>./server/main.jsx</ScriptPath>
          <CEFCommandLine>
            <Parameter>--enable-nodejs</Parameter>
          </CEFCommandLine>
        </Resources>
        <Lifecycle>
          <AutoVisible>true</AutoVisible>
        </Lifecycle>
        <UI>
          <Type>Panel</Type>
          <Menu>Quick Layers Pro</Menu>
          <Geometry>
            <Size>
              <Height>300</Height>
              <Width>40</Width>
            </Size>
            <MaxSize>
              <Height>2000</Height>
              <Width>2000</Width>
            </MaxSize>
            <MinSize>
              <!-- 解锁最小宽度 -->
              <Height>1</Height>
              <Width>1</Width>
            </MinSize>
          </Geometry>
        </UI>
      </DispatchInfo>
    </Extension>
  </DispatchInfoList>
</ExtensionManifest>